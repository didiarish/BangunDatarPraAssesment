<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            tools:context=".SegitigaSS">

        <!-- TODO: Update blank fragment layout -->

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Alas"
                android:ems="10"
                android:id="@+id/etAlas" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.032"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Tinggi"
                android:ems="10"
                android:id="@+id/etTinggi" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etAlas" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.011"/>
        <Button
                android:text="hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHitung" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etTinggi" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.065"/>
        <TextView
                android:text="Luas"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvLuas" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnHitung" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.151"
                app:layout_constraintVertical_bias="0.195"/>
        <TextView
                android:text="Keliling"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvKell"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.151"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvLuas"
                app:layout_constraintVertical_bias="0.039"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHasilKell"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvHasilLuas"
                app:layout_constraintStart_toEndOf="@+id/tvKell" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.16" app:layout_constraintVertical_bias="0.039"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHasilLuas" app:layout_constraintStart_toEndOf="@+id/tvLuas"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnHitung" app:layout_constraintHorizontal_bias="0.161"
                app:layout_constraintVertical_bias="0.195"/>
        <Button
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnShare" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHasilKell" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.257"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>